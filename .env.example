# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI Provider Configuration
# Options: openai, anthropic, google
AI_PROVIDER=openai

# AI API Keys (depending on selected provider)
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key
GOOGLE_AI_API_KEY=your_google_ai_api_key

# Quotla AI Backend URL (External FastAPI service)
# For local development: http://127.0.0.1:8000
# For production: your deployed AI backend URL
EXTERNAL_AI_API_URL=http://127.0.0.1:8000

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Calendly OAuth 2.0 Configuration
# Get your credentials from: https://calendly.com/integrations/api_webhooks
# Documentation: https://developer.calendly.com/api-docs/ZG9jOjM2MzE2MDM4-authentication

# OAuth 2.0 Client ID (required for OAuth flow)
CALENDLY_CLIENT_ID=your_calendly_client_id

# OAuth 2.0 Client Secret (required for OAuth flow)
CALENDLY_CLIENT_SECRET=your_calendly_client_secret

# OAuth 2.0 Redirect URI (must match configured redirect URI in Calendly app settings)
# Example: http://localhost:3000/api/auth/calendly/callback
CALENDLY_REDIRECT_URI=http://localhost:3000/api/auth/calendly/callback

# Calendly Webhook Signing Key (for verifying webhook payloads)
# Used to verify that webhook requests are coming from Calendly
CALENDLY_WEBHOOK_SIGNING_KEY=your_calendly_webhook_signing_key

# Optional: Personal Access Token (for development/testing only)
# Note: Use OAuth 2.0 for production. Personal access tokens are user-specific and less secure.
# CALENDLY_PERSONAL_ACCESS_TOKEN=your_personal_access_token

# Optional: Organization URI (for organization-level operations)
# Format: https://api.calendly.com/organizations/YOUR_ORG_UUID
# CALENDLY_ORGANIZATION_URI=your_organization_uri
